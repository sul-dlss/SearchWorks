<% # Overriden from Blacklight to add MODS librarian view support %>
<div class="modal-header">
  <% if request.xhr? %>
    <button type="button" class="ajax-modal-close close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  <% end %>
  <h3 class="modal-title"><%= t('blacklight.search.librarian_view.title') %></h3>
</div>
<% if @document.respond_to?(:to_marc) %>
  <%= render "marc_view" %>
<% elsif @document.mods.present? %>
  <%= render "mods_view"%>
<% else %>
  <%= t('blacklight.search.librarian_view.empty') %>
<% end %>
