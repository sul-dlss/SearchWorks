<% callnumber = location.items.first
   stackmapable = (callnumber and callnumber.stackmapable?)
%>

<% if stackmapable %>
  <%= link_to t('blacklight.tools.find_it').html_safe, stackmap_link(document,location), { :data => { :ajax_modal => "trigger" }, :class => "btn btn-xs btn-default stackmap-find-it" } %>
<% end %>
<strong class="<%=location_name_class%>">
  <% if location.external_location? %>
    <%= link_to location.name, location.location_link %>
  <% elsif stackmapable%>
    <%= link_to location.name, stackmap_link(document,location), { :data => { :ajax_modal => "trigger" } } %>
  <% else %>
    <%= location.name %>
  <% end %>
</strong>
