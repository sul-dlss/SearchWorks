<% thumbnail_src = document.image_urls(:large).try(:first) %>
<% if thumbnail_src.present? %>
  <%= image_tag(thumbnail_src, class: 'stacks-image', alt: '') %>
<% else %>
  <img class="cover-image center-block <%= css_class %>" hidden alt="" data-google-cover-image-target="image" data-isbn="<%= isbn %>" data-oclc="<%= oclc %>" data-lccn="<%= lccn %>">

  <% if document_index_view_type == :gallery %>
    <%= render Searchworks4::PlaceholderThumbnailComponent.new %>
  <% end %>
<% end %>
