<% @page_title= t 'blacklight.home.title' %>

<h1>Books, media, &amp; more</h1>

<%= render 'schema_dot_org_website_search' %>

<div class="row catalog-home-page">
  <div class="col-md-4 col-sm-6 home-page-facets" data-home-page-facet-collapse='true'>
    <h2>Find materials by&hellip;</h2>
    <%= render Blacklight::FacetComponent.with_collection(blacklight_config.facet_fields.slice('access_facet', 'format_main_ssim', 'building_facet', 'language').values, response: @response)%>
  </div>
  <div class="features col-md-8 col-sm-6">
    <h2>Featured resources</h2>
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= image_tag('homepage/digital.jpg', class: 'pull-left', alt: "", title: "'The Burning of San Francisco April 18, 19, 20, 1906.'", data: { "no-link-href" => search_catalog_path(collections_search_params) }) %>
            <h3><%= link_to "Digital collections", search_catalog_path(collections_search_params) %></h3>
            <p>Images, maps, data, &amp; more from the Stanford Digital Repository.</p>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= image_tag('homepage/theses.jpg', class: 'pull-left', alt: "", title: '', data: { "no-link-href" => search_catalog_path(f: {genre_ssim: ['Thesis/Dissertation']}) } ) %>
            <h3><%= link_to "Theses & dissertations", search_catalog_path(f: {genre_ssim: ['Thesis/Dissertation']}) %></h3>
            <p>
              All student work held in the Stanford Libraries &amp; Digital Repository.<br />
              <%= link_to 'Show Stanford work only', search_catalog_path(f: {genre_ssim: ['Thesis/Dissertation'], stanford_work_facet_hsim: ['Thesis/Dissertation']}) %>.
            </p>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= image_tag('homepage/databases.jpg', class: 'pull-left', alt: "", title: '',  data: { "no-link-href" =>  databases_path }) %>
            <h3><%= link_to "Databases", databases_path %></h3>
            <p>A-Z list of topic-specific databases. Not sure where to start? Try these <%= link_to 'selected databases', selected_databases_path %>.</p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <% if Settings.GOVERNMENT_DOCUMENTS_ACCESS_POINT %>
          <div class="panel panel-default">
            <div class="panel-body">
              <%= image_tag('homepage/govdocs.jpg', class: 'pull-left', alt: '', title: '', data: { 'no-link-href' => govdocs_path} ) %>
              <h3><%= link_to 'Government documents', govdocs_path %></h3>
              <p>Stanford is a depository library for state, federal, UN, and EU government documents.</p>
            </div>
          </div>
        <% end %>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= image_tag('homepage/coursereserves.jpg', class: 'pull-left', alt: "", title: '',  data: { "no-link-href" =>  course_reserves_path }) %>
            <h3><%= link_to "Course reserves", course_reserves_path %></h3>
            <p>Find books, media, and e-resources set aside for classes.</p>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= image_tag('iiif_logo.svg', class: 'pull-left', width: '100', alt: '', title: '',  data: { "no-link-href" =>  search_catalog_path(f: {iiif_resources: ['available'] }) }) %>
            <h3><%= link_to "IIIF resources", search_catalog_path(f: {iiif_resources: ['available'] }) %></h3>
            <p>Find IIIF-compatible items in the Stanford Digital Repository.</p>
            <p><a href="https://library.stanford.edu/projects/international-image-interoperability-framework/viewers">What is IIIF?</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/home_page_bento' %>
