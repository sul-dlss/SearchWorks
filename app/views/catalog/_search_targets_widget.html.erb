<div class="search-dropdown">
  <a href="#" class="navbar-text search-target h1" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">
    <span class="sr-only">Select search scope, currently:</span>
    <% if article_search? %>
      <%= t('searchworks.search_dropdown.articles.label') %>
    <% else %>
      <%= t('searchworks.search_dropdown.catalog.label') %>
    <% end %>
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" role="menu">
    <li role="presentation">
      <%= link_to_bento_search %>
    </li>
    <li class="<%= 'active' unless article_search? %>" role="presentation">
      <%= link_to_catalog_search %>
    </li>
    <li class="<%= 'active' if article_search? %>" role="presentation">
      <%= link_to_article_search %>
    </li>
  </ul>
</div>
