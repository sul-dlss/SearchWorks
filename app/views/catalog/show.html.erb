<div class="row">
  <div id="content" class="col-md-8 show-document">
    <%= render RecordToolbarComponent.new(presenter: document_presenter(@document), search_context: @search_context, search_session: search_session) %>
    <% @page_title = t 'blacklight.search.show.title_html', :document_title => document_presenter(@document).html_title, application_name: "#{I18n.t('blacklight.application_name')} catalog" -%>
    <% content_for(:head) { render_link_rel_alternates } -%>

    <% presenter = document_presenter(@document) %>
    <%= content_tag 'article',
      id: @document.id,
      data: {
        'document-id': @document.id.to_s.parameterize
      },
      itemscope: true,
      itemtype: @document.itemtype do %>
      <div class="document-main-section">
        <div class="document-thumbnail float-end">
          <%= render_cover_image(@document) %>
        </div>
       <h1>
          <span itemprop="name"><%= presenter.heading %></span>
        </h1>
        <% if presenter.vernacular_title.present? %>
          <p class='vernacular-title'><%= presenter.vernacular_title %></p>
        <% end %>

        <%= case
          when @document.managed_purls.any?
            render 'catalog/managed_purl_embed', document: @document
          when @document.druid && (!@document.mods? || @document.published_content?)
            render Record::Item::EmbedComponent.new(druid: @document.druid)
          end
        %>

        <% if @document.mods? %>
          <div class="upper-record-metadata">
            <%= render_resource_icon presenter.formats %>
            <% @document.mods.resourceType.each do |resource_type| %>
              <%= mods_record_field(resource_type) %>
            <% end %>

            <% @document.mods.imprint.each do |imprint| %>
              <%= mods_record_field(imprint) %>
            <% end %>

            <% @document.mods.language.each do |language| %>
              <%= mods_record_field(language, ', ') %>
            <% end %>

            <% @document.mods.description.each do |description| %>
              <%= mods_record_field(description) %>
            <% end %>

            <% @document.mods.extent.each do |extent| %>
              <%= mods_record_field(extent) %>
            <% end %>

            <% @document.mods.form.each do |form| %>
              <%= mods_record_field(form) %>
            <% end %>

            <% @document.mods.geo.each do |geo| %>
              <%= mods_record_field(geo) %>
            <% end %>

            <% @document.mods.cartographics.each do |cartographic| %>
              <%= mods_record_field(cartographic) %>
            <% end %>
          </div>

          <% if @document.display_type == 'mods_collection' %>
          <div class="async-collection-members col-md-12" data-controller="async-collection-members" data-async-collection-members-url-value="<%= collection_member_path(@document.id, type: action_name, format: :json) %>" aria-live="polite">
            <%= link_to_collection_members('View all items', @document) %>
          </div>
          <% end %>

          <%
            contributors = render(partial: "catalog/record/mods_contributors", locals: {document: @document})
            abstract_contents = render(partial: "catalog/record/mods_abstract_contents", locals: {document: @document})
            subjects = render(partial: "catalog/record/mods_subjects", locals: {document: @document})
            bibliography = render(Record::ModsBibliographicComponent.new(document: @document))
            access_conditions = render(partial: "catalog/record/mods_access", locals: {document: @document})

            locals = {
              type: "mods",
              has_data: {
                contributors: contributors.present?,
                abstract_contents: abstract_contents.present?,
                subjects: subjects.present?,
                bibliography_info: bibliography.present?,
                access_conditions: access_conditions.present?,
                browse_nearby: document.browseable_spines.present?
              }
            }
          %>

          <h2>Description</h2>
          <% if html_present?(contributors) %>
            <div class="section" id="<%= t('record_side_nav.contributors.id') %>" data-side-nav-class="<%= t('record_side_nav.contributors.id') %>">
              <div class="section-heading">
                <h3><%= t('record_side_nav.contributors.icon').html_safe %> Creators/Contributors</h3>
              </div>
              <div class="section-body">
                <dl class="dl-horizontal">
                  <%= contributors %>
                </dl>
              </div>
            </div>
          <% end %>

          <% if html_present?(abstract_contents) %>
            <div class="section" id="<%= t('record_side_nav.abstract_contents.id') %>" data-side-nav-class="<%= t('record_side_nav.abstract_contents.id') %>">
              <div class="section-heading">
                <h3><%= t('record_side_nav.abstract_contents.icon').html_safe %> Abstract/Contents</h3>
              </div>
              <div class="section-body">
                <dl>
                  <%= abstract_contents %>
                </dl>
              </div>
            </div>
          <% end %>

          <% if html_present?(subjects) %>
            <div class="section" id="<%= t('record_side_nav.subjects.id') %>" data-side-nav-class="<%= t('record_side_nav.subjects.id') %>">
              <div class="section-heading">
                <h3><%= t('record_side_nav.subjects.icon').html_safe %> Subjects</h3>
              </div>
              <div class="section-body">
                <dl class="dl-horizontal">
                  <%= subjects %>
                </dl>
              </div>
            </div>
          <% end %>

          <% if html_present?(bibliography) %>
            <div class="section" id="<%= t('record_side_nav.bibliography_info.id') %>" data-side-nav-class="<%= t('record_side_nav.bibliography_info.id') %>">
              <div class="section-heading">
                <h3><%= t('record_side_nav.bibliography_info.icon').html_safe %> Bibliographic information</h3>
              </div>
              <div class="section-body">
                <dl class="dl-horizontal">
                  <%= bibliography %>
                </dl>
              </div>
            </div>
          <% end %>

          <% if html_present?(access_conditions) %>
            <div class="section" id="<%= t('record_side_nav.access_conditions.id') %>" data-side-nav-class="<%= t('record_side_nav.access_conditions.id') %>">
              <div class="section-heading">
                <h3><%= t('record_side_nav.access_conditions.icon').html_safe %> Access conditions </h3>
              </div>
              <div class="section-body">
                <dl class="dl-horizontal">
                  <%= access_conditions %>
                </dl>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class='upper-record-metadata'>
            <%= render_resource_icon presenter.formats %>
            <dl class="dl-horizontal dl-invert">
              <%= render_if_present @document.marc_field('245c') %>

              <%- uniform_title = get_uniform_title(@document) -%>
              <%- if uniform_title -%>
                <dt title="<%= uniform_title[:label] %>"><%= uniform_title[:label] %></dt>
                <% uniform_title[:fields]&.each do |field| %>
                  <dd><%= auto_link(field[:field]) %></dd>
                  <% if field[:vernacular].present? %>
                    <dd><%= field[:vernacular] %></dd>
                  <% end %>
                <% end %>
                <% uniform_title[:unmatched_vernacular]&.each do |field| %>
                  <dd><%= field %></dd>
                <% end %>
              <%- end -%>

              <% [:language, '344', '345', '346', '347', '250ab', :imprint, :production_notice, '3003abcefg', :marc_instrumentation, :linked_series, :linked_collection].each do |tag| %>
                <%= render_if_present @document.marc_field(tag) %>
              <% end %>
            </dl>
          </div>

          <% if @document.display_type == 'marc_collection' %>
          <div class="async-collection-members col-md-12" data-controller="async-collection-members" data-async-collection-members-url-value="<%= collection_member_path(@document.id, type: action_name, format: :json) %>" aria-live="polite">
            <%= link_to_collection_members('View all items', @document) %>
          </div>
          <% end %>

          <%= render Record::MarcContentAdviceComponent.new(document: @document) %>

          <%= render Searchworks4::DocumentSectionLayout.new(title: 'Creators/Contributors') do %>
            <% %i[creator corporate_author meeting contributors].each do |target| %>
              <%= render @document.linked_author(target) %>
            <% end %>
          <% end %>

          <%= render Searchworks4::DocumentSectionLayout.new(title: 'Contents/Summary', dl_classes: '') do %>
            <%= render Record::MarcContentsSummaryComponent.new(document: @document) %>
          <% end %>

          <%= render Searchworks4::DocumentSectionLayout.new(title: 'Subjects') do %>
            <%= render_if_present @document.subjects(['600', '610', '611', '630', '647', '650', '651', '653', '656', '657', '658', '691', '693', '696', '697', '698', '699']) %>
            <%= render_if_present @document.subjects('655') %>
            <%= render_if_present @document.subjects('690') %>

            <% if @document.is_a_database? && @document[:db_az_subject] %>
              <dt>Database topics</dt>
              <% @document[:db_az_subject].each do |subject| %>
                <dd><%= link_to_database_search(subject) %></dd>
              <% end %>
            <% end %>
          <% end %>

          <%= render Searchworks4::DocumentSectionLayout.new(title: 'Bibliographic information') do %>
            <%= render partial: 'catalog/dates_from_solr', locals: {document: @document} %>

            <% fields = [
              242, 243, 246, 247, '254a', 255, '256a',
              310, 321, 340, 362, :unlinked_series,
              500, 501, 502, 506, 507, 508, 510, 511, 513, 514, 515, 516, 518, 521, 522, 524, 525, 526, 530, 533, 534, 535, 536, 538, 540, 541, 542, 544, 545, 547, 550, 552, 555, 556, 561, 562, 563, 565, 567, 580, 581, 583, 584, 585,
              :awards, :bound_with_note, :database_note,
              :linked_related_works, :added_entry, :hierarchical_place_name, 753, 754, :linked_serials, :local_subjects, 796, 797, 798, 799,
              :isbn, :issn, :doi, '028', 222
              ]
            %>

            <% fields.each do |tag| %>
              <%= render_if_present @document.marc_field(tag) %>
            <% end %>
          <% end %>

          <%= render Record::Item::Marc::CallnumberBrowseComponent.new(document: @document) if @document.browseable_spines.present? %>
        <% end %>
        <%= render 'catalog/schema_dot_org_default', document: @document %>
      </div>

      <% if @document.respond_to?(:export_as_openurl_ctx_kev) %>
        <!-- COinS, for Zotero among others. -->
        <span class="Z3988" title="<%= @document.export_as_openurl_ctx_kev(@document.document_formats.first) %>"></span>
      <% end %>
    <% end %>
  </div>
  <div class="record-panels col-md-4">
    <%= render "catalog/record/metadata_panels", document: @document %>

    <% if @document.bookplates.present? %>
      <div class="section">
        <div class="section-heading">
          <h3>Acquired with support from</h3>
        </div>
        <div class="section-body row container-fluid">
          <% @document.bookplates.each_slice(2).each do |bookplates| %>
            <%= render bookplates %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12 tech-details">
    <%= tech_details(@document) %>
  </div>
</div>
