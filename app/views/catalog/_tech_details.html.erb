<% document ||= @document %>
<% if document.respond_to?(:to_marc) %>
  <%= link_to t('blacklight.tools.librarian_view'), librarian_view_path(@document), {:id => 'librarianLink', :data => {:ajax_modal => "trigger"}} %> | Catkey: <%= document[:id] %>
<% elsif document.mods.present? %>
  <%= link_to t('blacklight.tools.librarian_view'), librarian_view_path(@document), {:id => 'librarianLink', :data => {:ajax_modal => "trigger"}} %> | DRUID: <%= document[:id] %>
<% else %>
  ID: <%= document[:id] %>
<% end %>
