<%= render Blacklight::System::ModalComponent.new do |component| %>
  <% component.title { t('blacklight.email.form.title') } %>

  <% component.body do %>
    <% document.citations.each do |format, citation| %>
      <% unless format == 'NULL' %>
        <h4><%= format %></h4>
      <% end %>
      <%= citation %>
    <% end %>
  <% end %>
<% end %>