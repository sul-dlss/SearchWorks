<% @page_title = t('blacklight.advanced_search.page_title', application_name: application_name) %>

<% content_for :skip_links do %>
  <%= render blacklight_config.skip_link_item_component.new(text: 'Skip to advanced search form', href: '#advanced-search-form') %>
<% end %>

<% content_for(:head) do %>
  <%= javascript_include_tag "searchworks4-adv-search", "data-turbo-track": "reload", defer: true %>
<% end %>

<% content_for :search_navbar do %>
<div class="search-masthead search-area-bg mb-5">
  <div class="container-lg">
    <div class="row flex-column flex-md-row">
        <h1 class="advanced page-header">
            <%= t('blacklight.advanced_search.form.title') %>
        </h1>
    </div>
  </div>
</div>
<% end %>
<div class="advanced-search-form col-sm-12">
  <div class="row">
    <div class="col-md-8" id="advanced-search-form">
        <%= render 'advanced_search_form' %>
    </div>

    <div class="col-md-4">
    </div>
  </div>
</div>
