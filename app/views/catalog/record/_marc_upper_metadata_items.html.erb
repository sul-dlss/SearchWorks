<% document ||= @document %>
<% if document.respond_to?(:to_marc) %>
  <dl class="dl-horizontal  dl-invert">
    <%= render_if_present document.marc_field('245c') %>

    <%- uniform_title = get_uniform_title(document) -%>
    <%- unless uniform_title.nil? -%>
      <%= render "catalog/field_from_marc", fields: uniform_title %>
    <%- end -%>

    <% [:language, '344', '345', '346', '347', '250ab', :imprint, :production_notice, '3003abcefg', :marc_instrumentation, :linked_series].each do |tag| %>
      <%= render_if_present document.marc_field(tag) %>
    <% end %>
  </dl>
<% end %>
