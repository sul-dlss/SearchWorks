<% title %>
<section class="bg-secondary py-5">
  <div class="container-fluid container-xl">
    <h1 class="h2 fw-semibold">Search for books, articles, and more</h1>
    <form class="search-query-form d-flex" style="max-width: 729px; width: 75vw" action="/all" accept-charset="UTF-8" method="get">
      <label class="visually-hidden" for="q">search for</label>
      <input class="search-q q form-control rounded-left rounded-start" aria-label="search for" type="search" name="q" id="q" autocomplete="off" spellcheck="false" required>
      <button class="btn btn-secondary search-btn d-flex align-items-center justify-content-center" type="submit" id="search"><span class="submit-search-text">Search</span></button>
    </form>
  </div>
</section>

<div class="container-fluid container-xl py-5">
  <div class="row">
    <div class="col-xl-7 col-md-8">
      <header class="h3 fw-semibold mb-3">Stanford University Libraries' search tools</header>
      <div class="mb-125">
        <div class="mb-1"><a href="https://searchworks.stanford.edu/">SearchWorks <span class="fw-semibold">Catalog</span></a></div>
        <div><%= t('catalog.sub_heading_html') %></div>
      </div>

      <div class="mb-3">
        <div class="mb-1"><a href="https://searchworks.stanford.edu/articles">SearchWorks <span class="fw-semibold">Articles+</span></a></div>
        <div><%= t('article.sub_heading_html') %></div>
      </div>

      <% %w[archives earthworks exhibits].each do |scope| %>
        <div class="mb-125">
          <div class="mb-1 fw-semibold"><%= link_to t('display_name_html', scope:), Settings[scope].home_url %></div>
          <div><%= t('sub_heading_html', scope:) %></div>
        </div>
      <% end %>
    </div>

    <div class="col-xl-4 offset-xl-1 col-md-4 ps-xxl-5">
      <aside class="p-3 bg-secondary">
        <header class="h3 fw-semibold mb-3">Other sources searched</header>
        <% %w[library_website libguides subject_specialist_search].each do |scope| %>
          <div class="mb-3">
            <div class="mb-1 fw-semibold"><%= link_to_if Settings[scope]&.home_url, t('display_name_html', scope:), Settings[scope]&.home_url %></div>
            <div><%= t('sub_heading_html', scope:) %></div>
          </div>
        <% end %>
      </aside>
    </div>
  </div>
</div>
