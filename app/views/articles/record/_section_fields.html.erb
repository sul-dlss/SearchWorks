<% doc_presenter = document_presenter(document) -%>
<% fields_to_render.each do |field_name, config| -%>
  <% field_name = field_name.to_s -%>
  <% value = doc_presenter.field_value Blacklight::Configuration::IndexField.new(config.merge(key: field_name, field: field_name)) -%>
  <% if value.present? %>
    <dt class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_label document, field: field_name %></dt>
    <dd class="blacklight-<%= field_name.parameterize %>"><%= value %></dd>
  <% end -%>
<% end -%>
