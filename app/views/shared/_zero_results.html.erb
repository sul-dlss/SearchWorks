<div class="panel panel-default">
  <div class="panel-body zero-results">
    <h3><%= t 'blacklight.search.zero_results.modify_your_search', search_type: search_type_name %></h3>
      <% if from_advanced_search? %>
        <li>
          <i class="fa fa-search-plus"></i>
          <%= link_to t('blacklight.search.zero_results.return_to_advanced_search'), "JavaScript:history.back();" %>
        </li>
        <li><%= t 'blacklight.search.zero_results.limit' %></li>

      <% else %>
        <dl>
          <dt>
            <%= t 'blacklight.search.zero_results.your_search' %>
          </dt>
          <dd>
            <% if @search_modifier.has_query? %>
              <%= "#{search_field_label(params)} > #{params[:q]}" %>
            <% end %>
            &nbsp;+ <%= @search_modifier.selected_filter_labels %>
          </dd>
          <% if @search_modifier.has_filters? && @search_modifier.has_query? %>
            <dt>
              <%= t 'blacklight.search.zero_results.limit_fields' %>
            </dt>
            <dd>
              <%= link_to "#{search_field_label(params)} > #{params[:q]}", search_catalog_path(@search_modifier.params_without_filters), data: {behavior: "backend-lookup", lookup: "#{catalog_backend_lookup_path(@search_modifier.params_without_filters)}"} %>
            </dd>
          <% end %>
          <% if @search_modifier.fielded_search? %>
            <dt>
              <%= t 'blacklight.search.zero_results.search_fields' %>
            </dt>
            <dd>
              <%= link_to "#{params[:q]}", search_catalog_path(@search_modifier.params_without_fielded_search_and_filters), data: {behavior: "backend-lookup", lookup: "#{catalog_backend_lookup_path(@search_modifier.params_without_fielded_search_and_filters)}"} %>
            </dd>
          <% end %>
        </dl>
      <% end %>
  </div>
</div>

<%= render 'shared/search_assistance_block' %>
<% if @search_modifier.has_query? %>
  <div class="panel panel-default">
    <div class="panel-body search-assistance">
      <h3>Check other sources</h3>
      <ul class="list-unstyled zero-results-list">
        <li>
          <%= link_to "Check WorldCat", "https://www.worldcat.org/search?q=#{params[:q]}" %>
        </li>
        <li>
          <%= link_to "Check library website", "https://library.stanford.edu/search/website?search=#{params[:q]}" %>
        </li>
    </div>
  </div>
<% end %>
