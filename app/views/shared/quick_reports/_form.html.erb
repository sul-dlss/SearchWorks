<% if show_quick_report? %>
  <div class="col-sm-3 mb-3">
    <%= form_with url: quick_reports_path, method: :post, class: 'feedback-form', role: 'form', name: 'quick_report' do |f| %>
      <%= f.hidden_field :url, value: request.referer, data: { feedback_form_target: 'reportingFromInput' } %>
      <button type='submit' class='btn btn-secondary btn-quick-report'>Report wrong cover image</button>
    <% end %>
  </div>
<% end %>
