<%
  show_preview ||= true
  preview_container = 'preview-filmstrip-container-' + collection_document[:id]
%>

<div class="clearfix collection-result-preview">
  <% if @type == 'show' %>
    <h2>Digital collection preview</h2>
  <% else %>
    <h4>Digital collection preview</h4>
  <% end %>
  <div class="col-md-12 image-filmstrip" data-thumb-width="100" data-thumb-height="100">
    <div class="viewport">
      <ul class="container-images">
        <% collection_document.collection_members.documents.each do |document| %>

            <% unless document.image_urls.blank? %>
            <li <%= preview_data_attrs(show_preview, 'preview-filmstrip', document[:id], '.' + preview_container) %>>
            <a href="<%= solr_document_path(document[:id]) %>">
            <img src="" class="thumb-<%= document[:id] %>" data-url="<%= document.image_urls(:thumbnail).first %>" data-alt="<%= document_presenter(document).heading %>">
            </a>
            <% if document.image_urls.length > 1 %>
            <div class="img-label"><%= pluralize(document.image_urls.length,"part") %></div>
            <% end %>
            </li>
            <% end %>

        <% end %>

      </ul>
    </div>
    <div class="<%= preview_container %>"></div>
  </div>

  <div class="results-online-section">
    <dl class="dl-horizontal results-metadata-section">
      <dt class="online-label">Online</dt>
      <dd>
        <%= link_to(text_for_inner_members_link(collection_document), collection_members_path(collection_document)) %>
      </dd>
    </dl>
  </div>
</div>
