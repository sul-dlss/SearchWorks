<%= content_tag @component,
  id: @id,
  data: {
    'document-id': @document.id.to_s.parameterize,
    'document-counter': @counter,
  },
  itemscope: true,
  itemtype: @document.itemtype,
  class: classes.flatten.join(' ') do %>
  <% if eds_restricted? %>
    <%= render SearchResult::EdsRestrictedComponent.new(counter: @counter, document: @document) %>
  <% else %>
    <%= header %>
    <div class="document-main-section">
      <%= title %>
      <%= thumbnail %>
      <%= embed %>
      <%= document_metadata %>
    </div>
    <%= footer %>
  <% end %>
<% end %>