<%= render "catalog/mods_search_results_document_fields", document: document %>

<dl class="dl-horizontal dl-invert results-metadata-section col-md-8">
  <% if document.extent.present? %>
    <dt><%= document.extent_label %></dt>
    <dd><%= document.extent %></dd>
  <% end %>

  <%= render SummaryDataComponent.new(document:) %>

  <% if document.index_parent_sets.present? %>
    <dt>Included in</dt>
    <dd>
      <div data-behavior="metadata-truncate">
        <% document.index_parent_sets.each do |set| %>
          <%= link_to(helpers.document_presenter(set).heading, solr_document_path(set))%>
        <% end %>
      </div>
    </dd>
  <% end %>

  <% if document.index_parent_collections.present? %>
    <dt>Digital collection</dt>
    <dd>
      <% document.index_parent_collections.each do |collection| %>
        <%= link_to(helpers.document_presenter(collection).heading, solr_document_path(collection))%>
      <% end %>
    </dd>
  <% end %>
</dl>

<%= render "catalog/search_results_accordion_sections", document: document %>
