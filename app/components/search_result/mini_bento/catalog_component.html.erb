<%= render LayoutComponent.new alternate_url: articles_url, close: do |c| %>
  <% c.with_alternate_catalog_body do %>
    <div class='col-md-6'>
      <h4 class="alternate-catalog-name">
        <%= t('searchworks.mini_bento.articles.name') %>
      </h4>
      <div class='alternate-catalog-desc'>
        <%= t('searchworks.mini_bento.articles.description') %>
      </div>
    </div>
    <div class='col-md-6'>
      <%= link_to(url, class: 'btn btn-primary') do %>
        See <span class="alternate-catalog-count"></span> <%= t('searchworks.mini_bento.articles.result_singular') %> results
      <% end %>
    </div>
  <% end %>
<% end %>
