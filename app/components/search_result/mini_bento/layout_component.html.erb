<div class='alternate-catalog' data-alternate-catalog="<%= url %>">
  <div class="row">
    <h3 class="alternate-catalog-title col"></h3>
    <% if close? %>
      <button type='button' class='alternate-catalog-close btn-close col-2 me-2' aria-label="Close">
      </button>
    <% end %>
  </div>
  <div class="alternate-catalog-body row d-none">
    <div class="col-md-5">
      <h4 class="alternate-catalog-name">
        <%= name %>
        <span class="badge rounded-pill text-bg-secondary alternate-catalog-count"></span>
      </h4>
      <div class='alternate-catalog-desc'>
        <%= description %>
      </div>
      <div>
        <%= link_to(url, class: 'btn btn-outline-primary') do %>
          View all <%= result_singular %> results
        <% end %>
      </div>
      <ul class="alternate-catalog-facets list-unstyled mt-2 mb-4"></ul>
    </div>

    <div class="col-md-7">
      <h4 class="alternate-catalog-name">
        Other search tools
      </h4>
      <div class="mb-2">
        <%= link_to(bento_url, class: 'btn btn-outline-primary') do %>
          View results from all tools
        <% end %>
      </div>

      <div data-controller="blacklight-result-count" data-blacklight-result-count-url-value="<%= archive_search_url %>">
        <%= link_to archive_search_url do %>
          Archival Collections at Stanford <span class="bi-box-arrow-up-right"></span>
        <% end %>
        <span class="badge rounded-pill text-bg-secondary" data-blacklight-result-count-target="count"></span>
      </div>

      <div data-controller="blacklight-result-count" data-blacklight-result-count-url-value="<%= geo_search_url %>">
        <%= link_to geo_search_url do %>
          EarthWorks for geospatial data and maps <span class="bi-box-arrow-up-right"></span>
        <% end %>
        <span class="badge rounded-pill text-bg-secondary" data-blacklight-result-count-target="count"></span>
      </div>

      <div data-controller="bento-result-count" data-bento-result-count-url-value="<%= bento_search_url('lib_guides') %>">
        <%= link_to '', data: {'bento-result-count-target': 'link'} do %>
          Guides to collections, tools, and services <span class="bi-box-arrow-up-right"></span>
        <% end %>
        <span class="badge rounded-pill text-bg-secondary" data-bento-result-count-target="count"></span>
      </div>

      <div data-controller="blacklight-result-count" data-blacklight-result-count-url-value="<%= exhibits_search_url %>">
        <%= link_to exhibits_search_url do %>
          Spotlight Exhibits <span class="bi-box-arrow-up-right"></span>
        <% end %>
        <span class="badge rounded-pill text-bg-secondary" data-blacklight-result-count-target="count"></span>
      </div>
    </div>
  </div>
</div>
