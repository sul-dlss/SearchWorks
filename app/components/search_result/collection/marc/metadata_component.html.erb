<%= render "catalog/marc_search_results_document_fields", document: document %>

<dl class="dl-horizontal dl-invert results-metadata-section col-md-8">
  <% if document.extent.present? %>
    <dt><%= document.extent_label %></dt>
    <dd><%= document.extent %></dd>
  <% end %>

  <% summary_data = render 'catalog/summary_data', document: document %>
  <% if summary_data.present? %>
    <dt>Summary</dt>
    <dd>
      <div data-behavior='metadata-truncate'>
        <%= sanitize summary_data %>
      </div>
    </dd>
  <% end %>

  <% if document.index_links.finding_aid.present? %>
    <dt>Finding aid</dt>
    <dd><%= document.index_links.finding_aid.first.html.html_safe %></dd>
  <% end %>
</dl>

<%= render "catalog/search_results_accordion_sections", document: document %>

<%= render 'catalog/collection_members', document: document %>

<%= render "catalog/index_online_section", document: document %>
