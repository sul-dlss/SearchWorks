<div class="form-group advanced-search-facet row facet_limit adv-publication-year-range">
  <%= label_tag "pub_year_tisim", :class => "col-sm-3 control-label" do %>Publication year range<% end %>
  <div class="col-sm-8 form-inline row">
    <%= label_tag("range[pub_year_tisim][begin]", 'from year', class: 'sr-only visually-hidden') %>
    <%= number_field_tag("range[pub_year_tisim][begin]", nil, maxlength: 6, class: "form-control text-center range_begin") %>
    <span class="control-label"> - </span>
    <%= label_tag("range[pub_year_tisim][end]", 'to year', class: 'sr-only visually-hidden') %>
    <%= number_field_tag("range[pub_year_tisim][end]", nil, maxlength: 6, class: "form-control text-center range_end") %>
  </div>
</div>
