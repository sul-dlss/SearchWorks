<%= render @layout.new(classes: 'panel-online') do |component| %>
  <% component.with_title { 'Best source' } %>

  <% component.with_body do %>
    <ul class='document-metadata list-unstyled'>
      <% links.each do |link| %>
        <li>
          <% if link.href == 'detail' %>
            <%= link_to(link.text, article_fulltext_link_path(id: document.id, type: link.type), data: { turbo: false }) %>
          <% else %>
            <%= link_to(link.text, link.href, class: link.ill? ? 'sfx' : '') %>
          <% end %>
          <%= render StanfordOnlyPopoverComponent.new if link.stanford_only? %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
