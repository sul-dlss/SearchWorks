    Also listed in
  <% end %>
  <% component.with_body do %>
    <div data-controller="meta-json-check" data-meta-json-check-field-value="earthworks"
       data-meta-json-check-link-url-value="<%= earthworks_url %>"
       data-meta-json-check-link-label-value="Earthworks"
       data-meta-json-check-url-value="<%= meta_json_url %>">
