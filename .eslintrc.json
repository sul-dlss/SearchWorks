{
  "root": true,
  "languageOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "globals": {
      "Blacklight": "readonly",
      "Turbo": "readonly",
      "document": "readonly",
      "window": "readonly",
      "$": "readonly",
      "jQuery": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "plugins": ["import"],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "import/no-extraneous-dependencies": "off",
    "no-param-reassign": "off",
    "max-len": ["error", { "code": 120 }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}